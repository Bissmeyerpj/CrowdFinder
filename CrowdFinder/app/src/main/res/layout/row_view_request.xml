<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    card_view:cardCornerRadius="8dp"
>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/brightOrange"
    >

        <TextView
                android:padding="10dp"
                android:textSize="24sp"
                android:id="@+id/request_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="@color/darkBlue"
        />

        <Button
                android:layout_below="@+id/request_name_text_view"
                android:id="@+id/request_accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Accept"
                android:textSize="24sp"
                android:textColor="@color/brightOrange"
                android:background="@color/darkBlue"
                android:layout_margin="3dp"
                android:padding="5dp"
        />

        <Button
                android:layout_below="@id/request_name_text_view"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/request_accept_button"
                android:id="@+id/request_decline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="24sp"
                android:textColor="@color/brightOrange"
                android:background="@color/darkBlue"
                android:layout_margin="3dp"
                android:padding="5dp"
        />

    </RelativeLayout>

</android.support.v7.widget.CardView>